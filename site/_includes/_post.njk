{% extends 'item.njk' %}
{% import 'components/item.njk' as item %}

{% block header %}
{{item.header(type='post', title=title, subtitle=subtitle)}}
{% endblock header %}

{% block before_content -%}
   {% if qualifiers -%}
   <div class='qualifiers'>
      {% if qualifiers.audience -%}
      <p>
         <b><a href='https://v4.chriskrycho.com/2018/assumed-audiences.html'>Assumed Audience</a>:</b>
         {{qualifiers.audience | inlineMd | safe}}
      </p>
      {%- endif %}
      {% if qualifiers.epistemic %}
      <p>
         <b><a href='https://v5.chriskrycho.com/journal/epistemic-status/'>Epistemic Status</a>:</b>
         {{qualifiers.epistemic | inlineMd | safe}}
      </p>
      {% endif %}
   </div>
   {%- endif %}
{%- endblock %}

{% block content %}
{% if book %}
<figure class='book-review'>
   <img src='{{book.cover}}' alt='cover for {{book.title}}' class='book-review__cover' />
   <figcaption class='book-review__details'>
      <section class='book-review__about'>
         <cite>{{book.title}}</cite>,
         {{book.author}} ({{book.year}})
      </section>
      {% if book.review %}
         <section class='book-review__summary'>
            <b>{{book.review.rating}}</b><br>
            {{book.review.summary | inlineMd | safe}}
         </section>         
      {% endif %}
   </figcaption>
</figure>
{% endif %}
{{ super() }}
{% endblock %}

{% block after_content %}
   {{item.meta(title, page.date, tags, updated, page.inputPath, thanks)}}
{% endblock %}