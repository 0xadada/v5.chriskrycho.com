{% macro header(type, title, subtitle) %}
<header class='item-header {{type}}'>
   <h1 class='item-title'>{{title | inlineMd | safe}}</h1>
   {% if subtitle -%}
      <p class='item-subtitle'>{{subtitle | inlineMd | safe}}</p>
   {%- endif %}
</header>
{% endmacro %}

{% macro meta(date, tags, updated, inputPath) %}
{%- set dateFormat = 'yyyy · MM · dd · HHmm' %}
<footer class='post-meta'>
   <span class='section-label'><a href='{{inputPath | editLink}}'>Published</a>:</span>
   <span class='section-content'>{% localeDate date, dateFormat -%}</span>
   {%- if updated -%}
   <span class='section-label'><a href='{{inputPath | historyLink}}'>Updated</a>:</span>
   <span class='section-content'>
      {%- localeDate updated, dateFormat -%}
   </span>
   {%- endif -%}

   {%- if tags.length > 0 %}
   <span class='section-label'>Topics:</span>
   <ul class='topics section-content'>
      {%- for tag in tags %}
      <li class='__topic'>{#<a href='/topics/{{tag | slug}}'>#}{{tag}}{#</a>#}</li>
      {%- endfor -%}
   </ul>
   {%- endif %}
</footer>
{% endmacro %}